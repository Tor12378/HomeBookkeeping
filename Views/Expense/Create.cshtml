@model ExpenseModel
@using HomeBookkeeping.Models

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<style>
    /* Общие стили */
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        border-radius: 5px;
    }

    /* Стили для формы */
    .form-group {
        margin-bottom: 20px;
    }

    /* Стили для кнопок */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<div class="container">
    <h2>Новая трата</h2>

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Date">Дата</label>
            <input asp-for="Date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="CategoryID">Категория</label>
            @Html.DropDownList("CategoryID", ViewBag.Categories as SelectList, "Выбрать категорию", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label asp-for="Amount">Сумма</label>
            <input asp-for="Amount" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Comment">Комментарий</label>
            <input asp-for="Comment" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Создать</button>
    </form>
</div>
